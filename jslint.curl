#!/bin/bash
# A faster way to jslint; curl's start-up cost is much lower than rhino's.
JSLINT_URL="http://localhost:3003/jslint"
RESULTS=`curl -s --form pretty="1" --form source="<${1}" --form filename="${1}" ${JSLINT_URL}`
echo "$RESULTS"
if [[ `echo "$RESULTS" | wc -l` -gt 1 ]] ; then
    exit 1
fi
